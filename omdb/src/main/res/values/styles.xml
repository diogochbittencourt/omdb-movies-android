<resources>

    <style name="OmdbTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Theme.Omdb.TextAppearance.TextView.ListItem.Default" parent="android:TextAppearance.Small">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Theme.Omdb.TextAppearance.TextView.ListItem.MovieTitle" parent="android:TextAppearance.Medium">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Theme.Omdb.TextAppearance.TextView.ListItem.MovieRating" parent="Theme.Omdb.TextAppearance.TextView.ListItem.MovieTitle" />

    <style name="Theme.Omdb.TextAppearance.TextView.MovieDetail" parent="android:TextAppearance.Medium">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Theme.Omdb.TextAppearance.TextView.EmptyListText" parent="android:TextAppearance.Medium">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MovieDetailFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/ic_plus</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
